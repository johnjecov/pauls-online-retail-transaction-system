<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>ports.utility.portsInitializer</listener-class>
    </listener>
    
    <context-param>
       <param-name>jdbcClassName</param-name>
       <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
       <param-name>dbUserName</param-name>
       <param-value>app</param-value>
    </context-param>
    <context-param>
       <param-name>dbPassword</param-name>
       <param-value>app</param-value>
    </context-param>
    <context-param>
       <param-name>jdbcDriverURL</param-name>
       <param-value>jdbc:derby</param-value>
    </context-param>
    <context-param>
       <param-name>dbHostName</param-name>
       <param-value>localhost</param-value>
    </context-param>
    <context-param>
       <param-name>dbPort</param-name>
       <param-value>1527</param-value>
    </context-param>
    <context-param>
       <param-name>databaseName</param-name>
       <param-value>PORTS</param-value>
    </context-param>
 
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>ports.controllers.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>      
    
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>ports.controllers.registerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>   
    
    
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>ports.models.CaptchaGenerator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/Captcha</url-pattern>
    </servlet-mapping>    

    <servlet>
        <servlet-name>addAddressServlet</servlet-name>
        <servlet-class>ports.controllers.addAddressServlet</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:derby</param-value>
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1527</param-value>
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>PORTS</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <servlet-name>addToCartServlet</servlet-name>
        <servlet-class>ports.controllers.addToCartServlet</servlet-class>
        <init-param>
            <param-name>jdbcClassName</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUserName</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>app</param-value>
        </init-param>
        <init-param>
            <param-name>jdbcDriverURL</param-name>
            <param-value>jdbc:derby</param-value>
        </init-param>
        <init-param>
            <param-name>dbHostName</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <init-param>
            <param-name>dbPort</param-name>
            <param-value>1527</param-value>
        </init-param>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>PORTS</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addAddressServlet</servlet-name>
        <url-pattern>/addAddress</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
        <servlet-name>addToCartServlet</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
    
</web-app>
