    </servlet-mapping>
    <servlet>
        <servlet-name>paymentFServlet</servlet-name>
        <servlet-class>ports.controllers.paymentFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paymentFServlet</servlet-name>
        <url-pattern>/updatePayment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>updateFServlet</servlet-name>
        <servlet-class>ports.controllers.updateFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateFServlet</servlet-name>
        <url-pattern>/updateOrderStatus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>adminUpdateServlet</servlet-name>
        <servlet-class>ports.controllers.adminUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminUpdateServlet</servlet-name>
        <url-pattern>/adminUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removeItemFromCartServlet</servlet-name>
        <url-pattern>/removeItemFromCart</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>orderReceivedServlet</servlet-name>
        <servlet-class>ports.controllers.orderReceivedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>orderReceivedServlet</servlet-name>
        <url-pattern>/orderReceived</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>giveFeedbackServlet</servlet-name>
        <servlet-class>ports.controllers.giveFeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>giveFeedbackServlet</servlet-name>
        <url-pattern>/giveFeedback</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            900
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
</web-app>
