<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>ports.utility.portsInitializer</listener-class>
    </listener>
    
    <context-param>
       <param-name>jdbcClassName</param-name>
       <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
    </context-param>
    <context-param>
       <param-name>dbUserName</param-name>
       <param-value>app</param-value>
    </context-param>
    <context-param>
       <param-name>dbPassword</param-name>
       <param-value>app</param-value>
    </context-param>
    <context-param>
       <param-name>jdbcDriverURL</param-name>
       <param-value>jdbc:derby</param-value>
    </context-param>
    <context-param>
       <param-name>dbHostName</param-name>
       <param-value>localhost</param-value>
    </context-param>
    <context-param>
       <param-name>dbPort</param-name>
       <param-value>1527</param-value>
    </context-param>
    <context-param>
       <param-name>databaseName</param-name>
       <param-value>PORTS</param-value>
    </context-param>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    
</web-app>
